{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "config.schema.json",
  "title": "sheet validator",
  "description": "schema for meta-data submission sheet validatior",
  "type": "object",
  "properties": {
    "name": {
      "description": "name of the sheet",
      "type": "string"
    },
    "allow_user_fields": {
      "description": "flag indicating whether sheet is allowed to contain user-defined fileds",
      "type": "boolean"
    },
    "fields": {
      "description": "expected fields in the sheet",
      "type": "array",
      "items": {
        "type": "object"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "extends": {
      "description": "parent config (e.g., rnaseq_assay extends sequencing_assay)",
      "type": "string"
    },
    "omit_fields": {
      "description": "list of parent fields to omit in dervived sheet",
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    }
  },
  "required": [
    "name",
    "fields"
  ]
}