{
    "sheet_name": "study",
    "allow_user_fields": false,
    "fields": [
        {
            "name": "grant_number",
            "required": true
        },
        {
            "name": "publication",
            "validator": [
                {
                    "type": "regexp",
                    "options": {
                        "pattern": "/^10.\\d{4,9}/[-._;()/:A-Z0-9]+$/i"
                    }
                },
                {
                    "type": "regexp",
                    "options": {
                        "pattern": "/PMID:\\d+/"
                    }
                },
                {
                    "type": "warn_if_missing",
                    "options": {
                        "message": "Are the data being submitted published? Please provide a PubMed ID or DOI.  Preprint DOI can also be provided."
                    }
                }
            ]
        },
        {
            "name": "acknowledgment",
            "type": "clob"
        },
        {
            "name": "study_name",
            "required": true
        },
        {
            "name": "study_description",
            "required": true
        },
        {
            "name": "dataset_name",
            "required": true
        },
        {
            "name": "dataset_description",
            "required": true,
            "type": "clob"
        },
        {
            "name": "disease",
            "validator": [
                {
                    "type": "delimiter",
                    "value": "//"
                },
                {
                    "type": "warn_if_missing"
                }
            ]
        },
        {
            "name": "data_citation",
            "validator": [
                {
                    "type": "delimiter",
                    "value": "//"
                }
            ]
        },
        {
            "name": "website",
            "validator": [
                {
                    "type": "regexp",
                    "options": {
                        "pattern": "/^https?:\/\/(?:www\\.)?[-a-zA-Z0-9@:%._\\+~#=]{1,256}\\.[a-zA-Z0-9()]{1,6}\b(?:[-a-zA-Z0-9()@:%_\\+.~#?&\/=]*)$/"
                    }
                }
            ]
        },
        {
            "name": "logo"
        },
        {
            "name": "additional_study_information"
        }
    ]
}