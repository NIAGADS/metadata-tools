{
    "sheet_name": "study",
    "allow_user_fields": false,
    "fields": [
        {
            "name": "grant_number",
            "required": true
        },
        {
            "name": "publication",
            "validator": [
                {
                    "type": "regexp",
                    "options": {
                        "pattern": "publication"
                    }
                },
                {
                    "type": "warn_if_missing",
                    "message": "Are the data being submitted published? Please provide a PubMed ID or DOI.  Preprint DOI can also be provided."
                }
            ]
        },
        {
            "name": "acknowledgment",
            "type": "clob"
        },
        {
            "name": "study_name",
            "required": true
        },
        {
            "name": "study_description",
            "required": true
        },
        {
            "name": "dataset_name",
            "required": true
        },
        {
            "name": "dataset_description",
            "required": true,
            "type": "clob"
        },
        {
            "name": "disease",
            "validator": [
                {
                    "type": "delimiter",
                    "value": "//"
                },
                {
                    "type": "warn_if_missing"
                }
            ]
        },
        {
            "name": "data_citation",
            "validator": [
                {
                    "type": "delimiter",
                    "value": "//"
                },
                {
                    "type": "test",
                    "options": {
                        "test": {
                            "type": "any_fields_exist",
                            "sheet": "sample_assay",
                            "field": [
                                "datasource_publication",
                                "datasource_accession",
                                "datasource_fileid"
                            ]
                        }
                    },
                    "message": "A data citation is provided in the Study sheet. Please include one or more of the following: `Datasource Publication`, `Datasource Accession`, `Datasource FileID` in the sample/assay sheet"
                }
            ]
        },
        {
            "name": "website",
            "validator": [
                {
                    "type": "regexp",
                    "options": {
                        "pattern": "URL"
                    }
                }
            ]
        },
        {
            "name": "logo"
        },
        {
            "name": "additional_study_information"
        }
    ]
}