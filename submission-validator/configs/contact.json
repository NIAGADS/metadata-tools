{
    "sheet_name": "contacts",
    "allow_user_fields": false,
    "fields": [
        {
            "name": "name",
            "required": true
        },
        {
            "name": "email",
            "required": true,
            "validator": [
                {
                    "type": "regexp",
                    "options": {"pattern":"\\A[\\w!#$%&'*+/=?`{|}~^-]+(?:\\.[\\w!#$%&'*+/=?`{|}~^-]+)*@(?:[A-Z0-9-]+\\.)+[A-Z]{2,6}\\Z"}
                }
            ]
        },
        {
            "name": "affiliation",
            "required": true
        },
        {
            "name": "role",
            "required": true,
            "validator": [
                {
                    "type": "list",
                    "value": [
                        "principal investigator",
                        "PI",
                        "submitter",
                        "primary contact"
                    ]
                }
            ]
        }
    ]
}