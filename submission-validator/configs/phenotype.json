{
    "sheet_name": "phenotypes",
    "allow_user_fields": true,
    "fields": [
        {
            "name": "subjectid_submitter",
            "required": true
        },
        {
            "name": "cohort",
            "required": true,
            "validator": [
                {
                    "type": "depends_on",
                    "options": {
                        "test": "match",
                        "sheet": "cohort",
                        "field": "name"
                    }
                }
            ]
        },
        {
            "name": "sex",
            "required": true,
            "validator": [
                {
                    "type": "list",
                    "value": [
                        "male",
                        "female",
                        "not available",
                        "not reported"
                    ]
                }
            ]
        },
        {
            "name": "disease",
            "validator": [
                {
                    "type": "data_dictionary",
                    "value": "disease"
                },
                {
                    "type": "warn_if_missing"
                }
            ]
        },
        {
            "name": "case_control_status",
            "validator": [
                {
                    "type": "list",
                    "value": [
                        "case",
                        "control"
                    ]
                },
                {
                    "type": "depends_on",
                    "options": {
                        "test": "not_null",
                        "field": "disease",
                        "message": "`Disease` was specified; please include `Case Control Status` to indicate whether each sample was a case or control."
                    }
                }
            ],
            "required": true
        },
        {
            "name": "age_at_diagnosis",
            "validator": [
                {
                    "type": "age"
                },
                {
                    "type": "units",
                    "value": "years"
                },
                {
                    "type": "warn_if_missing",
                    "options": {
                        "message": "If `age_at_diagnosis` is available, it is the preferred variable for reported age."
                    }
                }
            ]
        },
        {
            "name": "age_at_onset",
            "validator": [
                {
                    "type": "age"
                },
                {
                    "type": "units",
                    "value": "years"
                }
            ]
        },
        {
            "name": "age_at_last_exam",
            "validator": [
                {
                    "type": "age"
                },
                {
                    "type": "units",
                    "value": "years"
                }
            ]
        },
        {
            "name": "age_at_death",
            "validator": [
                {
                    "type": "age"
                },
                {
                    "type": "units",
                    "value": "years"
                },
                {
                    "type": "depends_on",
                    "value": [
                        "yes"
                    ],
                    "options": {
                        "test": "value",
                        "field": "autopsy",
                        "message": "Some samples are reported taken at autopsy.  Please include the `Age at Death`"
                    }
                }
            ],
            "required": true
        },
        {
            "name": "ethnicity",
            "validator": [
                {
                    "type": "data_dictionary",
                    "value": "ethnicity"
                }
            ]
        },
        {
            "name": "race",
            "required": true,
            "validator": [
                {
                    "type": "data_dictionary",
                    "value": "race"
                }
            ]
        },
        {
            "name": "ancestry",
            "required": true,
            "validator": [
                {
                    "type": "data_dictionary",
                    "value": "ancestry"
                }
            ]
        },
        {
            "name": "apoe_allele",
            "required": true,
            "validator": [
                {
                    "type": "data_dictionary",
                    "value": "genotype"
                }
            ]
        },
        {
            "name": "autoposy",
            "required": true,
            "validator": [
                {
                    "type": "list",
                    "value": [
                        "yes",
                        "no",
                        "not reported",
                        "not available",
                        "not applicable"
                    ]
                },
                {
                    "type": "warn_if_missing",
                    "options": {
                        "message": "Please specify if samples were extracted from subjects during autopsy.  Can leave off if not relevant to the samples/subjects. If any values are `yes`, please also provide the `Age at Death` and any relevant information the autopsy in the `Autopsy_info` field"
                    }
                }
            ]
        },
        {
            "name": "autoposy_info",
            "validator": [
                {
                    "type": "depends_on",
                    "options": {
                        "test": "absent",
                        "field": "autopsy",
                        "message": "The `Autoposy_info` field was provided, but you did not specify if samples were extracted from subjects during autoposy.  Please include the `Autopsy` and `Age at Death` fields"
                    }
                }             
            ],
            "type": "clob"
        },
        {
            "name": "additional_information",
            "type": "clob"
        }
    ]
}